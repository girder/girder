$warnColor = #f0ad4e
$failColor = red
$failBackgroundColor = #f2dede

.g-restart-container
  display inline
  button.g-restart
    float right
    transition all 0.35s ease-in-out
    transition-property background-color border-color
  .g-clear
    clear both

.g-plugin-restart-text
  padding-top 7px
  font-size 14px
  text-align right
  overflow hidden
  visibility hidden
  max-height 0
  transition max-height 0.35s ease-in-out

  &.show
    visibility visible
    max-height 45px

.g-plugin-list-container
  border 1px solid #e2e2e2
  border-radius 3px
  margin-top 10px

  .g-plugin-list-item
    padding 10px
    border-bottom 1px solid #e2e2e2

    &:hover
      background-color #f4f4f4

    .g-plugin-name
      font-weight bold
      font-size 16px
      color #666

    .g-plugin-version
      font-weight normal
      font-variant small-caps
      font-size 14px
      color #999
      margin-left 7px

    a.g-plugin-config-link
      margin-left 7px

    .g-plugin-description
      margin-top 7px
      color #999

    .g-plugin-error-message
      margin-top 10px
      color #d9534f

    &:last-child
      border-bottom none

  .g-plugin-list-item-failed
    background-color $failBackgroundColor

    &:hover
      background-color saturate($failBackgroundColor, 60%)

  .g-plugin-list-item-notice
    font-size 13px
    text-transform uppercase
    color white
    border-radius 3px
    padding 2px 5px
    margin-left 8px
    cursor default

    &.g-plugin-list-item-experimental-notice
      background-color $warnColor

    &.g-plugin-list-item-failed-notice
      background-color $failColor

  .bootstrap-switch
    float right

    .bootstrap-switch-label
      color $warnColor
      font-family fontello
    .bootstrap-switch-handle-on, .bootstrap-switch-handle-off
      word-wrap normal

.g-plugin-config-breadcrumbs > ol.breadcrumb
  padding 6px 10px
  border-radius 3px
  background-color #f1f1f1
  border 1px solid #e0e0e0
  margin-bottom 15px

  > li.active
    color #555

.popover
  &.g-plugin-list-item-failed-notice-popover
    max-width none

  .g-plugin-list-item-failed-notice-popover-content
    font-family monospace
    white-space pre
