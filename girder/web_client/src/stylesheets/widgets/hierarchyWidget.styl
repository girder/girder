.g-hierarchy-widget

  .g-hierarchy-sticky
    position sticky
    z-index 10

  .g-folder-header-buttons
    float right

  .g-hierarachy-paginated-bar
    background-color #eaebea
    .g-hierarchy-pages-header
      .g-hierarchycenter
        margin auto
        text-align center
        .pagination
          display inline-block
          vertical-align middle
          margin 0
          padding 0
          border-radius 4px
        .g-page-next
        .g-page-prev
          a
            padding 8px 12px
        #g-page-selection-input
          margin-left 3px
          margin-right 3px

  .g-folder-list-container
  .g-item-list-container
    position relative
    z-index 0

  .g-folder-list
  .g-item-list
  .g-file-list
    margin 0
    padding 0
    list-style-type none

    >li
      border-top 1px solid #efefef
      box-sizing border-box
      padding 4px 5px 3px

    >.g-folder-list-entry
    >.g-item-list-entry
      font-size 15px

      &:hover
        background-color #fbfbf7

      &[public="false"]
        background-color #fff9ea

        &:hover
          background-color #f4eedf

    >.g-show-more
      background-image linear-gradient(to bottom, #f6f6f6 0, #fff 10px)

    .g-list-checkbox
      font-size 16px
      margin-right 7px
      position relative
      top -1px

  .g-checked-folder-count
  .g-checked-item-count
    margin-right 23px

  .g-level-up-button-container
    display inline-block

    .g-hierarchy-level-up
      border 1px solid #d5d5d5
      border-radius 3px
      padding 2px 3px
      position relative
      top -1px

      &:hover
        border 1px solid #aaa
        background-color #dadada

  .g-item-size
  .g-folder-privacy
    display inline-block
    padding 1px 5px
    margin-left 10px
    float right
    color #808080
    font-size 13px
  .g-folder-privacy
    padding 1px 5px 1px 3px

  li.g-selected
    background-color #f2f2f8 !important
    box-shadow 0 0 0 1px #99b inset

.g-folder-metadata
  margin-top 20px

.g-folder-info-line
.g-collection-info-line
.g-file-info-line
  color #808080
  margin-bottom 2px
  padding 2px 4px
  border-left 5px solid #5cb85c
  background-color #f4f4f4

  .g-bold-part
    color #555
    font-weight bold

.g-info-dialog-description
  margin 0 0 10px
  border-bottom 1px solid #eee
