$navWidth = 180px
$minHeight = 500px

#g-global-nav-container
  float left
  width $navWidth
  padding 15px 0 20px 6px
  box-shadow inset -1px 0 0 #eee
  background-image linear-gradient(to left, #f6f6f6 0%, #fff 8px)
  min-height $minHeight

#g-app-body-container
  padding 10px
  margin-left $navWidth + 1px
  min-height $minHeight

.g-validation-failed-message
  font-weight bold
  color #dd2222

.g-bottom-message
  margin-top 15px
  font-size 12px
  color #878080
