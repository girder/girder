/**
 * Place global styles in this file.
 */
@import 'nib'

/* droid-sans-regular - latin */
@font-face {
  font-family: 'Droid Sans';
  font-style: normal;
  font-weight: 400;
  src: local('Droid Sans'), local('DroidSans'),
       url('../fonts/droid-sans-v6-latin-regular.woff2') format('woff2'),
       url('../fonts/droid-sans-v6-latin-regular.woff') format('woff');
}

/* droid-sans-700 - latin */
@font-face {
  font-family: 'Droid Sans';
  font-style: normal;
  font-weight: 700;
  src: local('Droid Sans Bold'), local('DroidSans-Bold'),
       url('../fonts/droid-sans-v6-latin-700.woff2') format('woff2'),
       url('../fonts/droid-sans-v6-latin-700.woff') format('woff');
}

*:not(i)
  font-family 'Droid Sans',sans-serif

i
  font-smoothing antialiased

body
  padding 0
  word-wrap break-word

a
  cursor pointer
  text-decoration none !important

.g-clear-both
  clear both

.g-clear-right
  clear right

ul.dropdown-menu
  >li.dropdown-header
    padding 3px 20px 3px 8px
    margin-bottom 3px
    background-color #555
    font-weight bold
    color white
  >li>a
    padding 3px 20px 3px 8px

    &:hover
      background-color #eee
    >i
      margin-right 3px

.panel-heading
  padding 10px 10px

.panel-title
  font-size 15px

.g-body-title
  font-size 20px
  font-weight bold
  color #555

.g-body-subtitle
  font-size 15px
  color #888
  margin-bottom 5px

.g-dialog-subtitle
  margin-top 5px
  width 100%

.g-info-message-container
  background-color #fffee1
  color #777
  padding 6px 8px
  border 1px solid #e5e2c8

/* Augment the bootstrap tabs styling a bit */
.nav-tabs>li:not(.active)>a
  background-color #f7f7f7
  border 1px solid #d8d8d8

  &:hover
    border 1px solid #cdcdcd
    background-color #f0f0f0
    background linear-gradient(top, #f0f0f0, #f7f7f7)

/* Bug fix for tabs in bootstrap 3 */
.nav-tabs
  overflow hidden

/* Personal preference for less white space at bottom of dialogs */
.modal-footer
  margin-top 5px

.modal-content
  border-radius 0

.modal-backdrop.in
  opacity .35

/* By default bootstrap only applies form-inline rules at >=768px width */
.form-inline .form-group
  display inline-block
  margin-bottom 0
  vertical-align middle

blockquote p
  font-size inherit

/* Don't show the vertical scroll bar when we show a dialog unless we must */
.modal
  overflow-y auto

.g-monospace-viewer
  font-family monospace
  border 1px solid #ccc
  background-color #f5f5f5
  border-radius 0
  overflow-x scroll
  padding 7px 11px
  white-space pre
  word-wrap initial
  font-size 13px

textarea
  max-width 100%
