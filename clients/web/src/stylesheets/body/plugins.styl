@import '~nib/index.styl'

$warnColor = #f0ad4e

.g-plugin-list-container
  border 1px solid #e2e2e2
  border-radius 3px
  margin-top 10px

  .g-plugin-list-item
    padding 10px
    border-bottom 1px solid #e2e2e2

    &:hover
      background-color #f4f4f4

    .g-plugin-name
      font-weight bold
      font-size 16px
      color #666

    .g-plugin-version
      font-weight normal
      font-variant small-caps
      font-size 14px
      color #999
      margin-left 7px

    a.g-plugin-config-link
      margin-left 7px

    .g-plugin-description
      margin-top 7px
      color #999

    .g-plugin-error-message
      margin-top 10px
      color #d9534f

    &:last-child
      border-bottom none

  .bootstrap-switch
    float right

    .bootstrap-switch-label
      color $warnColor
      font-family fontello
    .bootstrap-switch-handle-on, .bootstrap-switch-handle-off
      word-wrap normal

.g-plugin-restart
  visibility hidden
  button.g-plugin-restart-button
    float right
  .g-plugin-restart-text
    padding-top 7px
    font-size 14px
  .g-plugin-clear
    clear right
  max-height 0px
  transition max-height 0.35s ease-in-out
  overflow hidden
  &.g-plugin-restart-show
    visibility visible
    max-height 40px


.g-plugin-config-breadcrumbs > ol.breadcrumb
  padding 6px 10px
  border-radius 3px
  background-color #f1f1f1
  border 1px solid #e0e0e0
  margin-bottom 15px

  > li.active
    color #555

.g-experimental-notice
  font-size 13px
  text-transform uppercase
  background-color $warnColor
  color white
  border-radius 3px
  padding 2px 5px
  margin-left 8px
  cursor default
