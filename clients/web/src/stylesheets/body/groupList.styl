@import "../layout/layoutVars"

.g-group-list-entry
  .g-group-title
    font-size $resourceTitleSize

  .g-group-description
    font-size $resourceSubtitleSize

  .g-group-right-column
    padding-left 8px
    display inline
    width 320px
    font-size 14px
    float right
    color $lightColor

  .g-group-created-date
    color $normalColor


.g-groups-list-header
  padding-bottom 10px

  .g-group-pagination
    display inline-block
    >ul
      margin 0 15px 0 0

    .pagination>li>a
      float none
      line-height 1.5
      padding 7px 12px

  .g-group-search-form
    display inline-block
    margin-right 15px
