$buttonBg = #eee
$buttonBorder = 1px solid #ccc
$buttonHoverBg = linear-gradient(to bottom, #e2e2e2 0, #eee 80%)
$borderRadius = 3px

.g-search-wrapper
  display flex
  color #333

  .popover-title
    display none

  .popover .radio
    display block
    min-height 20px
    margin-top 10px
    margin-bottom 10px
    vertical-align middle

    input[type="radio"]
      margin-right 3px
      margin-top 3px

  .g-search-options-button
    color #333
    border-radius $borderRadius 0 0 $borderRadius
    margin-right 0
    border $buttonBorder
    background-color $buttonBg

    &:hover
      background-image $buttonHoverBg

  .g-search-field
    width auto
    border-radius 0 $borderRadius $borderRadius 0
    margin-left 0
    border-left none

    &[mode-select="on"]
      border-radius 0

  .g-search-result.g-search-selected
    background-color #ccc

  .g-search-results
    .dropdown-menu
      right 10px
      left auto

  .g-search-mode-choose
    color #333
    background-color $buttonBg
    border $buttonBorder
    border-left none
    border-radius 0 $borderRadius $borderRadius 0
    padding-left 4px
    padding-right 4px

    &:hover
      background-image $buttonHoverBg

.g-search-help-text
  line-height 1.25

.g-search-examples-list
  margin-left 0
  list-style-position inside
  padding-left 2px

  >li
    line-height 1.25
    margin-top 5px
