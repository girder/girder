- const isAdmin = currentUser && currentUser.get('admin');
- const userTooltip = usersCount === 1 ? `${usersCount} total user` : `${usersCount} total users`;
.g-body-view-container
  .g-user-list-header
    .g-user-sort

    form.g-user-search-form.form-inline(role="form")
      .form-group.g-users-search-container

    if isAdmin
      .g-user-count-container(title=userTooltip)
        i.icon-user
        span.g-user-count= usersCount

    if isAdmin
      button.g-user-create-button.btn.btn-sm.btn-success
        i.icon-plus-squared
        span= "Create user"

  each user in users
    .g-user-list-entry
      .g-user-names
        .g-user-title
          a.g-user-link(g-user-cid=user.cid)
            b= user.name()
        .g-user-subtitle
          span.g-user-login  #{user.get('login')}
      .g-user-right-column
        .g-user-joined
          i.icon-clock
          span.g-list-right-column-description= 'Joined on'
          span.g-list-created-date  #{formatDate(user.get('created'), DATE_DAY)}
          span.g-list-created-short-date #{formatShortDate(user.get('created'), DATE_DAY)}
        if user.get('size') !== undefined
          .g-space-used
            i.icon-floppy
            span.g-list-right-column-description= 'Currently using'
            span.g-list-space-used  #{formatSize(user.get('size'))}
        if user.get('status') === 'disabled'
          .g-user-status
            i.icon-cancel-circled
            | Account disabled
        else if user.get('status') === 'pending'
          .g-user-status
            i.icon-attention-circled
            | Account pending approval
      .g-clear-right

  .g-user-list-footer
    .g-user-pagination
