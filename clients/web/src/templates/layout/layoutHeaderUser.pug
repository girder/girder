.g-user-text
  if user
    a.g-user-dropdown-link(data-toggle="dropdown", data-target="#g-user-action-menu")
      | #[i.icon-user] #{user.get('login')}
      i.icon-down-open
    a.g-user-dropdown-link-fade(data-toggle="dropdown", data-target="#g-user-action-menu")
      | #[i.icon-user.g-icon-user-fade]
      i.icon-down-open
    #g-user-action-menu.dropdown
      ul.dropdown-menu(role="menu")
        li(role="presentation")
          a.g-my-folders(href=`#user/${user.id}`)
            i.icon-folder
            | My folders
        li(role="presentation")
          a.g-my-settings(href=`#useraccount/${user.id}/info`)
            i.icon-cog
            | My account
        li.divider(role="presentation")
        li(role="presentation")
          a.g-logout
            i.icon-logout
            | Log out
  else
    .g-non-user
      if registrationPolicy !== 'closed'
        a.g-register Register
        .g-or-text or
      a.g-login Log In
        i.icon-login
    .g-non-user-fade
      a.g-non-user-dropdown-link(data-toggle="dropdown", data-target="#g-non-user-action-menu")
        i.icon-down-open

      #g-non-user-action-menu.dropdown
        ul.dropdown-menu(role="menu")
          if registrationPolicy !== 'closed'
            li(role="presentation")
              a.g-register Register
          li(role="presentation")
            a.g-login Log In
              i.icon-login
