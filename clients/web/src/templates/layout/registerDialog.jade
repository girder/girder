.modal-dialog
  .modal-content
    form#g-register-form.modal-form(role="form")
      .modal-header
        button.close(data-dismiss="modal", aria-hidden="true", type="button") &times;
        h4.modal-title= title
      .modal-body
        .form-group#g-group-login
          label.control-label(for="g-login") Choose a login name
          input.input-sm#g-login.form-control(type="text", placeholder="Login")
        .form-group#g-group-email
          label.control-label(for="g-email") Enter email address
          input.input-sm#g-email.form-control(type="text", placeholder="Email")
        .form-group#g-group-firstName
          label.control-label(for="g-firstName") Enter first name
          input.input-sm#g-firstName.form-control(type="text", placeholder="First name")
        .form-group#g-group-lastName
          label.control-label(for="g-lastName") Enter last name
          input.input-sm#g-lastName.form-control(type="text", placeholder="Last name")
        .form-group#g-group-password
          label.control-label(for="g-password") Choose a password
          input.input-sm#g-password.form-control(type="password", placeholder="Password")
        .form-group#g-group-password2
          label.control-label(for="g-password2") Retype password
          input.input-sm#g-password2.form-control(type="password", placeholder="Password")
        .g-validation-failed-message
        if !currentUser
          .g-bottom-message
            | Already have an account?
            a.g-login-link  Log in here.
      .modal-footer
        a.btn.btn-default(data-dismiss="modal") Close
        button#g-register-button.btn.btn-primary(type="submit")
          i.icon-plus-circled
          |  Register
