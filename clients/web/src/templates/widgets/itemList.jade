ul.g-item-list
  each item in items
    li.g-item-list-entry
      if checkboxes
        input.g-list-checkbox(type="checkbox", g-item-cid="#{item.cid}")
      a.g-item-list-link(g-item-cid="#{item.cid}")
        i.icon-doc-text-inv
        | #{item.get('name')}
      .g-item-size #{girder.formatSize(item.get('size'))}
  if (hasMore)
    li.g-show-more
      a.g-show-more-items
        i.icon-level-down
        | Show more items...
