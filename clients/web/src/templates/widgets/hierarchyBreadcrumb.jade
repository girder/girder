- var idx = 0
each obj in links
  li
    a.g-breadcrumb-link(g-index=idx, href="/##{obj.resourceName}/#{obj.id}")
      if obj.resourceName === 'user'
        i.icon-user
      else if obj.resourceName === 'collection'
        i.icon-sitemap
      = obj.name()
  - idx += 1

if current
  li.active
    if current.resourceName === 'user'
      i.icon-user
    else if current.resourceName === 'collection'
      i.icon-sitemap
    = current.name()

if descriptionText
  a.g-description-preview= descriptionText

.pull-right
  .g-child-count-container.hide
    .g-subfolder-count-container
      i.icon-folder
      .g-subfolder-count

    if idx > 0
      .g-item-count-container
        i.icon-doc-text-inv
        .g-item-count

  if idx > 0
    - var last = links.pop();
    .g-level-up-button-container
      a.g-hierarchy-level-up(title="Go up one level", placement="left",
                             href="##{last.resourceName}/#{last.id}")
        i.icon-level-up
