.g-hierarchy-breadcrumb-bar
  ol.breadcrumb
.g-hierarchy-actions-header
  input.g-select-all(type="checkbox", data-toggle="tooltip",
                     title="Select / Unselect all")

  .btn-group
    button.g-checked-actions-button.btn.btn-sm.btn-default.dropdown-toggle(data-toggle="dropdown",
                                                                           disabled="disabled")
      i.icon-check
      i.icon-down-dir
    ul.g-checked-actions-menu.dropdown-menu(role="menu")

  .g-folder-header-buttons
    if (type == 'folder')
      if (level >= AccessType.WRITE)
        button.g-upload-here-button.btn.btn-sm.btn-success(title="Upload here")
          i.icon-upload
      if (level >= AccessType.ADMIN)
        button.g-folder-access-button.btn.btn-sm.btn-warning(title="Access control")
          i.icon-key-inv
      button.g-folder-info-button.btn.btn-sm.btn-info(title="Show folder details")
        i.icon-info
    .btn-group
      button.g-folder-actions-button.btn.btn-sm.btn-default.dropdown-toggle(data-toggle="dropdown")
        i.icon-folder-open
        i.icon-down-dir
      ul.g-folder-actions-menu.dropdown-menu.pull-right(role="menu")
        li.dropdown-header(role="presentation")
          i.icon-folder-open
          |  #{model.get('name') || model.name()}
        if (type == 'folder')
          li(role="presentation")
            a.g-download-folder(role="menuitem")
              i.icon-download
              | Download folder
        if (level >= AccessType.WRITE)
          li(role="presentation")
            a.g-create-subfolder(role="menuitem")
              i.icon-folder
              | Create folder here
        if (type =='folder' && level >= AccessType.ADMIN)
          li.divider(role="presentation")
          li(role="presentation")
            a.g-delete-folder(role="menuitem")
              i.icon-trash
              | Delete this folder
  .g-clear-right
.g-folder-list-container
.g-item-list-container
