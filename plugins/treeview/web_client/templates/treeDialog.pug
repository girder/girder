.modal-dialog
  .modal-content
    .modal-header
      button.close(data-dismiss='modal', aria-hidden='true', type='button') &times;
      h4.modal-title
        = title

    .modal-body
      .g-treeview
        .g-treeview-container
        .g-treeview-selected.form-group
          input#g-treeview-selected.form-control(
            type='text', readonly=readonly)
        .help-block.hidden
          = help

        .g-validation-failed-message.hidden

    .modal-footer
      a.btn.btn-small.btn-default(data-dismiss='modal') Cancel
      button.g-submit-button.btn.btn-small.btn-primary(type='submit')
        i.icon-edit
        = submit
